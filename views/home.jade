extends layout

block pageTitle
    .jumbotron
        h1 ABC Member Portal
        
script.
      $(document).ready(function(){
      var user,pass;
      $("#submit").click(function(){
      user=$("#user").val();
      pass=$("#password").val();
      $.post("http://localhost:1337/login",{user: user,password: pass}, function(data){
      if(data==='done')
      {
      alert("login success");
      }
      });
      });
      });

block pageContent
    .container-fluid
        .wrapper
            .form-signin
                form#form1(name='form1', method='post', action='javascript:postHandler()')
                p
                label
                h2 Member Sign-In
                input#name(type='text', name='name', placeholder='Please Input Name')
                br
                input#password(type='password', name='password', placeholder='Password')
                p
                label
                input#submit(type='submit', name='submit', value='Submit')